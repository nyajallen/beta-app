<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".parentactivity.ParentSettingsFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:padding="20dp"
        android:textSize="24sp"/>

    <LinearLayout
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/info_labels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif"
                android:text="Child Name"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="35dp"
                android:fontFamily="sans-serif"
                android:text="Child Number"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="35dp"
                android:fontFamily="sans-serif"
                android:text="Parent Name"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="35dp"
                android:fontFamily="sans-serif"
                android:text="Parent Number"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/info_textviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/child_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/child_name"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/child_number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="35dp"
                android:text="@string/phone_number"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/parent_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="35dp"
                android:text="Mr. Doe"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/parent_number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="35dp"
                android:text="555-555-5554"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/edit_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/edit_button1"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginStart="5dp"
                android:background="@color/white"
                android:src="@drawable/ic_edit" />

            <ImageButton
                android:id="@+id/edit_button2"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="30dp"
                android:background="@color/white"
                android:src="@drawable/ic_edit" />

            <ImageButton
                android:id="@+id/edit_button3"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginTop="30dp"
                android:background="@color/white"
                android:src="@drawable/ic_edit" />

            <ImageButton
                android:id="@+id/edit_button4"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="30dp"
                android:background="@color/white"
                android:src="@drawable/ic_edit" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/settings_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="70dp"
        android:layout_marginStart="145dp">

        <LinearLayout
            android:id="@+id/info_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/child_edit"
                android:layout_width="156dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:textColor="@android:color/black"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/child_phone_edit"
                android:layout_width="156dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:inputType="text"
                android:textColor="@android:color/black"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/parent_edit"
                android:layout_width="156dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:inputType="text"
                android:textColor="@android:color/black"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/parent_phone_edit"
                android:layout_width="156dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:inputType="text"
                android:textColor="@android:color/black"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/done_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/done_button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Done"
                android:textAllCaps="true"
                android:visibility="invisible"/>

            <Button
                android:id="@+id/done_button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="Done"
                android:textAllCaps="true"
                android:visibility="invisible"/>

            <Button
                android:id="@+id/done_button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Done"
                android:textAllCaps="true"
                android:visibility="invisible"/>

            <Button
                android:id="@+id/done_button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Done"
                android:textAllCaps="true"
                android:visibility="invisible"/>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>