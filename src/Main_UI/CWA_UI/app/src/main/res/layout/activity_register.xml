<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".childactivity.MainActivity"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <EditText
            android:id="@+id/username_input"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:inputType="text"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/usernametext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="email"
            android:textSize="10dp" />

        <EditText
            android:id="@+id/password_input"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"
            android:inputType="text" />
        <TextView
            android:id="@+id/passwordtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="password"
            android:textSize="10dp" />

            />
        <EditText
            android:id="@+id/parentname_input"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"
            android:inputType="text"
            android:text=""
            />
        <TextView
            android:id="@+id/parentnametext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="parent name"
            android:textSize="10dp" />
        <EditText
            android:id="@+id/parentphone_input"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"
            android:inputType="text"
            />
        <TextView
            android:id="@+id/parentphonetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="parent phone # (numbers only no dashes/spaces)"
            android:textSize="10dp" />
        <EditText
            android:id="@+id/childname_input"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"
            android:inputType="text"
            />
        <TextView
            android:id="@+id/childnametext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="child's name"
            android:textSize="10dp" />
        <EditText
            android:id="@+id/childphone_input"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"
            android:inputType="text"
            />
        <TextView
            android:id="@+id/childphonenumbertext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="child phone # (numbers only no dashes/spaces)"
            android:textSize="10dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:gravity="center">

    <Button
        android:id="@+id/register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="REGISTER USER"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="487dp" />
    </LinearLayout>


</LinearLayout>